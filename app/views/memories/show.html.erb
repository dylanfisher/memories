<% cache [@memory, application_cache_key], expires_in: 4.weeks do %>
  <div class="site-container">
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-12">
          <%= content_tag :h1, md(@memory.title), class: 'large-title' %>
          <%= content_tag :div, md(@memory.description) %>
        </div>
      </div>
    </div>
  </div>
  <%= render_blocks @memory %>
<% end %>
